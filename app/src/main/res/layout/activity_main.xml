<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:background="#262626"
        android:layout_height="160dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f0f0f0"
                        android:text="9시" />
                    <ImageView
                        android:id="@+id/img_09"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/img01"/>
                    <TextView
                        android:id="@+id/temp_09"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f0f0f0"
                        android:layout_gravity="center_horizontal"
                        android:text="기온" />
                    <TextView
                        android:id="@+id/pop_09"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f0f0f0"
                        android:layout_gravity="center_horizontal"
                        android:text="강수확률" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f0f0f0"
                        android:text="12시" />
                    <ImageView
                        android:id="@+id/img_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/temp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f0f0f0"
                        android:layout_gravity="center_horizontal"
                        android:text="기온" />
                    <TextView
                        android:id="@+id/pop_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f0f0f0"
                        android:layout_gravity="center_horizontal"
                        android:text="강수확률" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f0f0f0"
                        android:text="3시" />
                    <ImageView
                        android:id="@+id/img_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/temp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f0f0f0"
                        android:layout_gravity="center_horizontal"
                        android:text="기온" />
                    <TextView
                        android:id="@+id/pop_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f0f0f0"
                        android:layout_gravity="center_horizontal"
                        android:text="강수확률" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f0f0f0"
                        android:text="6시" />
                    <ImageView
                        android:id="@+id/img_18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/temp_18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f0f0f0"
                        android:layout_gravity="center_horizontal"
                        android:text="기온" />
                    <TextView
                        android:id="@+id/pop_18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f0f0f0"
                        android:layout_gravity="center_horizontal"
                        android:text="강수확률" />

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/weather"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textColor="#f0f0f0"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>


    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/schedule"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="일정"
                        android:textSize="30dp"/>
                    <TextView
                        android:id="@+id/schedule_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="date"
                        android:textSize="20dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/schedule_memo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="등록된 일정이 없습니다."
                    android:layout_margin="10dp"
                    android:textSize="20dp"/>

            </LinearLayout>

        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/time_table"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="시간표"
                        android:textSize="30dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/day_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="등록된 강의가 없습니다."
                    android:layout_margin="10dp"
                    android:textSize="20dp"/>

            </LinearLayout>

        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <Button
                    android:id="@+id/bus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="버스 시간"
                    android:textSize="30dp"/>

            </LinearLayout>

        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_lms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="사이버 캠퍼스"/>
            <Button
                android:id="@+id/btn_total"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="종합정보사이트"/>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>